<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3bcc1"
    tools:context=".fragment.MatchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quarter_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#1d3e59"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="1st" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#76ac88"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teama_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#2b3c76"
                    android:textSize="20sp"
                    tools:text="Team A" />

                <TextView
                    android:id="@+id/teama_score_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    tools:text="999" />

                <Button
                    android:id="@+id/plus_one_teama_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+1 Point" />

                <Button
                    android:id="@+id/plus_two_teama_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+2 Point" />

                <Button
                    android:id="@+id/plus_three_teama_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+3 Point" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#608e6c"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/teamb_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#2b3c76"
                    android:textSize="18sp"
                    tools:text="Team B" />

                <TextView
                    android:id="@+id/teamb_score_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    tools:text="999" />

                <Button
                    android:id="@+id/plus_one_teamb_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+1 Point" />

                <Button
                    android:id="@+id/plus_two_teamb_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+2 Point" />

                <Button
                    android:id="@+id/plus_three_teamb_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+3 Point" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:background="#7cc7d2"
            android:text="Next"
            android:textColor="@android:color/white" />

    </LinearLayout>

</FrameLayout>